html
    head 
        title #{book.title}
        link(rel='stylesheet' href='/styles.css')
    body
        include ./partials/header.pug
        br
        |Title: #{book.title}
        br
        |Author: #{book.author}
        br
        |Price: $#{book.price}
        br
        |Page Count: #{book.numPages}
        br
        |In Stock: #{book.stock}
        br
        |Published by: 
        a(href="/publishers/"+publisher.name) #{publisher.name}
        br
        |Genres include:
        ul
            each genre in genres
                | #{genre.genre},       
        button#book.isbn(type='button' onclick='addToCart(this.id)') Add to Cart
    script(href="/js/query.js")